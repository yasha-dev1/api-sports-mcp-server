# API-Sports Configuration
API_SPORTS_API_KEY=your_api_key_here
API_SPORTS_BASE_URL=https://v3.football.api-sports.io

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/api_sports_mcp.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7
LOG_FORMAT=json  # json or text

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_TEAMS=86400  # 24 hours in seconds
CACHE_TTL_FIXTURES_COMPLETED=0  # 0 means permanent
CACHE_TTL_FIXTURES_UPCOMING=3600  # 1 hour
CACHE_TTL_STATISTICS=3600  # 1 hour
CACHE_TTL_STANDINGS=1800  # 30 minutes
CACHE_TTL_PREDICTIONS=3600  # 1 hour
CACHE_MAX_SIZE=1000  # Maximum number of items in cache

# Rate Limiting Configuration
RATE_LIMIT_CALLS_PER_MINUTE=30
RATE_LIMIT_CALLS_PER_DAY=100
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_BACKOFF_FACTOR=2
RATE_LIMIT_MAX_RETRIES=3

# MCP Server Configuration
MCP_SERVER_NAME=api-sports-mcp-server
MCP_SERVER_VERSION=0.1.0